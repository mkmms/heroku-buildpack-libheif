#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install libheif"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://github.com/strukturag/libheif/releases/download/v1.4.0/libheif-1.4.0.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/libheif.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export CFLAGS="$PATH:$HOME/vendor/libheif/1.4.0/include"' >> $PROFILE_PATH
echo 'export LDFLAGS="$PATH:$HOME/vendor/libheif/1.4.0/lib"' >> $PROFILE_PATH
echo 'export PKG_CONFIG_PATH="$PATH:$HOME/vendor/libheif/1.4.0/lib/pkgconfig"' >> $PROFILE_PATH